                //- button(type="submit" class="btn") Apply

            each value,key in filters
                div.filter
                    h4 #{key}
                    div.filteritems
                        each item in value
                            div.filtervalue
                                p #{item[0]}
                                input(type="checkbox" name=key value=item[0] checked=item[1])
        section#product
            div#product-header
                h3 showing result for #{searchtext}
                //- p description
            div#items
                each product in products
                    div.item
                        img(src=product.imgurl)
                        div.description
                            h3.header #{product.name}
                            ul 
                                each spec in product.description
                                    li=spec
                        div.price
                            h2=product.price+'$'
                            button.btn(onclick="additem(event)" data-productid=product._id) Add to cart
block script 
    script(src="../static/scripts/product.js")
    script(src="../static/scripts/search.js")